<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd"
              version="4.0">
    <factory>
        <exception-handler-factory>com.example.config.DefaultExceptionHandlerFactory</exception-handler-factory>
    </factory>

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>zh</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>messages</base-name>
            <var>messages</var>
        </resource-bundle>
    </application>

    <lifecycle>
        <phase-listener>com.example.config.MessageHandler</phase-listener>
        <phase-listener>com.example.config.RequestLoggingPhaseListener</phase-listener>
    </lifecycle>
</faces-config>